<script>

    var card = {
        view: "template",
        css: "background",
        height: 'auto',
        template: '<%=link_to image_tag("menu/card.png" , :style => 'width: 80%') , my_card_path%>'
    };

    var user_info = {
        view: "template",
        css: "background",
        height: 'auto',
        template: '<%=link_to image_tag("menu/info.png" , :style => 'width: 80%') , user_info_menu_path %>'
    }

    var collection = {
        view: "template",
        css: "background",
        height: 'auto',
        template: '<%=image_tag "menu/share.png" , :style => 'width: 84%'%>'
    }

    var message = {
        view: "template",
        css: "background",
        height: 'auto',
        template: '<%=image_tag "menu/skill.png" , :style => 'width: 100%'%>'
    }

    var layouts = {
        type: 'clean',
        scroll: true,
        rows: [
            logo_location,
            {
                type:"clean",
                rows: [
                    card ,
                    user_info,
                    collection,
                    message
                ]
            }
        ]
    };

    webix.ui.fullScreen();
    webix.Touch.enable();
    webix.Touch.limit(true);
    webix.ui(layouts);

</script>
