    var bottom = {
        type: 'clean' ,
        height: 40 ,
        css: 'bottom-menu',
        cols: [
            { id:'discovery' , view:"button", value: "发现", inputWidth:'100%', css:"bt_1"},
            {
                view: 'template',
                css:"new",
                template: '<a href=""><%=image_tag('menu/add46.png' , :class => 'menu-image')%></a>'
            },
            { id: 'scheduler', view:"button", value: "日程", inputWidth:'100%', css:"bt_1"},
        ]
    };

    var layouts = {
        type: 'clean',
