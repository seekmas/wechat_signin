    var header = {
        header: true,
        text: '详细资料'
    };

    var footer = {
        footer: true,
        text: 'Duang~完善以上资料,会有更多新人联系到你!'
    };

    var roles = {
        color: 'red' ,
        text: '我的角色-可选3个'
    };

    var language = {
        color: 'orange' ,
        text: '我的语言'
    };

    var year = {
        color: 'lightgreen' ,
        text: '入行年份'
    };

    var style = {
        color: 'normalgreen' ,
        text: '我的风格'
    };

